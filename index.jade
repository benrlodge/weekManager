doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300')


  body


    .newTask(style='display:none')
      input(type='text',id='newTaskInput', placeholder='New Task...')


    
    #container.container
      
      .top-panel Oh Hi
      

      .container-left

        header
          h1 Weekly Tasks

        nav
          .item.onDeck.od
            h3 On Deck
            ul.sortable
              li 
                span Nothing on deck


          .item.backBurner.bb
            h3 Back Burner
            ul.sortable
              li 
                span Nothing on the backburner





      .week

        <script type="text/template" id="week_template">
        <div class='day mon'>
        <h2> Monday </h2>
        <ul class='sortable'>
        {{#each allTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>


        <div class='day tue'>
        <h2> Tuesday </h2>
        <ul class='sortable'>
        {{#each allTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>


        </script>




