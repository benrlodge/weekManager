doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300')


  body


    .newTask(style='display:none')
      input(type='text',id='newTaskInput', placeholder='New Task...')


    
    #container.container
      
      .top-panel Oh Hi
      

      .container-left

        header
          h1 Weekly Tasks

        nav
          .item.onDeck.od
            h3 On Deck
            ul.sortable
              li 
                span Nothing on deck


          .item.backBurner.bb
            h3 Back Burner
            ul.sortable
              li 
                span Nothing on the backburner





      .week
        <script type="text/template" id="template_week">
        <div class='day mon'>
        <h2> Monday </h2>
        <ul class='sortable'>
        {{#each monTasks }}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>

        <div class='day tue'>
        <h2> Tuesday </h2>
        <ul class='sortable'>
        {{#each tueTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>

        <div class='day wed'>
        <h2> Wednesday </h2>
        <ul class='sortable'>
        {{#each wedTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>

        <div class='day thur'>
        <h2> Tnursday </h2>
        <ul class='sortable'>
        {{#each thurTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>

        <div class='day fri'>
        <h2> Friday </h2>
        <ul class='sortable'>
        {{#each friTasks}}
        <li> {{this.detail}} </li>
        {{/each}}
        </ul>
        </div>
        </script>



        











    script(src="js/lib/jquery.js")
    script(src="js/lib/jquery-ui.js")
    script(src="js/lib/handlebars.js")
    script(src="/shared/underscore.js")
    script(src="/shared/backbone.js")
    script(src="js/app.js")

